<h1>Edit Booking</h1>

<%= simple_form_for @booking do |form| %>
  <%= form.input :start_date, as: :date_picker %>
  <%= form.input :end_date, as: :date_picker %>
  <%= form.input :message, as: :text %>
  <%= form.button :submit, class: "btn btn-primary" %>
<% end %>

<%= link_to "Cancel", booking_path(@booking), class: "btn btn-secondary" %>
